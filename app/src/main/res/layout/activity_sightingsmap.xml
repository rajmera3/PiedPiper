<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.piedpiper.SightingsMapActivity">

    <Button
        android:id="@+id/mapstartdate_button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dip"
        android:text="Change Start Date"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/mapenddate_button_id" />

    <Button
        android:id="@+id/mapenddate_button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dip"
        android:text="Change End Date"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/mapstartdate_button_id"
        android:layout_marginLeft="87dp"
        android:layout_marginRight="3dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.piedpiper.SightingsMapActivity" />


</android.support.constraint.ConstraintLayout>
