<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.piedpiper.SightingsGraphActivity">

<Button
    android:id="@+id/graphstartdate_button_id"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Change Start Date"
    android:padding="10dip"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="16dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="3dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp"
    app:layout_constraintRight_toLeftOf="@+id/graphenddate_button_id"
    android:textColor="@color/white"
    android:background="@color/colorPrimary"/>

<Button
    android:id="@+id/graphenddate_button_id"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Change End Date"
    android:padding="10dip"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginTop="5dp"
    app:layout_constraintLeft_toRightOf="@+id/graphstartdate_button_id"
    android:layout_marginLeft="87dp"
    android:layout_marginRight="3dp"
    app:layout_constraintRight_toRightOf="parent"
    android:textColor="@color/white"
    android:background="@color/colorPrimary"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="400dip"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@id/graphstartdate_button_id"
        app:layout_constraintLeft_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>